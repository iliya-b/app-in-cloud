@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PasswordRepeat">Repeat Password</label>
                <input asp-for="Input.PasswordRepeat" class="form-control">
                <span asp-validation-for="Input.PasswordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-2 w-100">Log in</button>
            </div>
        </form>
    </div>
            <div class="col-md-3">
</div>
        <div class="col-md-6">
            <p>AppInCloud allows you to run android application in the cloud environment:</p>
            <ul>
                <li>Run corporate applications in secure cloud</li>
                <li>Test applications on different platforms while developing</li>
            </ul>
        </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
